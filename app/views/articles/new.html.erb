<div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h2>Add new Article</h2>
        <%= form_for(@article) do |f| %>
        <div class="form"><%= f.label :title %>:
        <%= f.text_field :title %></div>
        <br/>
        <%= f.label :content %>:
        <%= f.text_field :content %>
        <br/>

        <%= f.submit %>
        <% end %>
      </div>
    </div>
</div>
